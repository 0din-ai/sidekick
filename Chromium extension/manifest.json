{
    "manifest_version": 3,
    "name": "0DIN Jailbreak Research Tool",
    "version": "1.0.0",
    "description": "AI Sidekicks",

    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "cookies",
        "tabs",
        "webNavigation"
    ],

    "host_permissions": [
        "<all_urls>"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["fp-simple.js"],
            "run_at": "document_idle",
            "all_frames": false
        },
        {
            "matches": ["<all_urls>"],
            "js": ["content.js", "enhanced-content.js"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],

    "action": {
        "default_popup": "enhanced-popup.html",
        "default_title": "0DIN Sidekick v1.0"
    }
}