{
    "manifest_version": 2,
    "name": "0DIN Jailbreak Research Tool",
    "version": "1.0.0",
    "description": "AI Sidekicks",

    "browser_specific_settings": {
        "gecko": {
            "id": "sidekick@0din.ai",
            "strict_min_version": "109.0"
        }
    },

    "permissions": [
        "storage",
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "cookies",
        "tabs",
        "webNavigation",
        "<all_urls>"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["fp-simple.js"],
            "run_at": "document_idle",
            "all_frames": false
        },
        {
            "matches": ["<all_urls>"],
            "js": ["content.js", "enhanced-content.js"],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],

    "browser_action": {
        "default_popup": "enhanced-popup.html",
        "default_title": "0DIN Sidekick v1.0"
    }
}
